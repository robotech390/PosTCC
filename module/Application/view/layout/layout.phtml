<script>
    document.addEventListener('DOMContentLoaded', function () {
        const flashMessagesContainer = document.getElementById('flash-message-data');
        const toastContainer = document.querySelector('.toast-container');

        const messages = flashMessagesContainer.querySelectorAll('div[data-namespace]');

        messages.forEach(messageEl => {
            const namespace = messageEl.getAttribute('data-namespace');
            const messageText = messageEl.innerHTML;

            const toastDetails = {
                'success': { headerClass: 'bg-success text-white', icon: '‚úÖ' },
                'error':   { headerClass: 'bg-danger text-white',  icon: '‚ùå' },
                'info':    { headerClass: 'bg-info text-white',    icon: '‚ÑπÔ∏è' },
                'default': { headerClass: 'bg-secondary text-white', icon: 'üîî' }
            };

            const details = toastDetails[namespace] || toastDetails['default'];

            const toastHTML = `
            <div class="toast" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="toast-header ${details.headerClass}">
                    <strong class="me-auto">${details.icon} Notifica√ß√£o</strong>
                    <small>agora mesmo</small>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
                <div class="toast-body">
                    ${messageText}
                </div>
            </div>
        `;

            toastContainer.insertAdjacentHTML('beforeend', toastHTML);

            const newToastEl = toastContainer.lastElementChild;

            if (newToastEl) {
                const toast = new bootstrap.Toast(newToastEl, {
                    autohide: true,
                    delay: 5000
                });
                toast.show();

                newToastEl.addEventListener('hidden.bs.toast', () => {
                    newToastEl.remove();
                });
            }
        });
    });
</script>